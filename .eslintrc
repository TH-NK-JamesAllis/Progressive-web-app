{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": 1,
    "quotes": [ 1, "single" ],
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-console": 1,
    "no-unused-vars": 1,
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-unreachable": 1,
    "no-alert": 2,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-multi-comp": [1, { "ignoreStateless": true }],
    "react/jsx-pascal-case": 1,
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
    }],
    "space-before-blocks":1,
    "no-var":2,
    "indent": ["error", 2],
    "prefer-const":1,
    "no-new-object":1,
    "object-shorthand":1,
    "prefer-template":1,
    "no-eval":2,
    "no-loop-func":1,
    "no-new-func":1,
    "no-param-reassign":1,
    "prefer-arrow-callback":1,
    "arrow-spacing":1,
  },
}
